<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="194dp">

        <TableLayout
            android:id="@+id/devicesTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:id="@+id/headerColumn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glossy_header"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/visibilityHeaderImage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Icon for visibility column"
                    android:scaleType="fitCenter"
                    app:srcCompat="@android:drawable/ic_menu_view"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/nameHeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="NAME"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/macAddrHeaderText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="MAC"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/addDeviceButton"
        style="@style/darkButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:maxWidth="320dp"
        android:minWidth="275dp"
        android:text="ADD A DEVICE"
        tools:ignore="HardcodedText" />

</LinearLayout>
